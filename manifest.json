{
    "manifest_version": 2,
    "name": "Global Consent Manager",
    "version": "1.0",

    "description": "A browser extension for easier managing of GDPR consent cookies acros websites",
    "homepage_url": "http://www.globalconsentmanager.com/",

    "applications": {
        "gecko": {
            "id": "we@globalconsentmanager.com"
        }
    },

    "permissions": [
        "<all_urls>",
        "activeTab",
        "browsingData",
        "cookies",
        "dns",
        "storage",
        "tabs",
        "webNavigation",
        "webRequest"
    ],
    "background": {
        "scripts": ["src/background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "src/cookie.html"
    },

    "icons": {
        "96": "icon-96.png"
    }
}
