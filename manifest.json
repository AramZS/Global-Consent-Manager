{
    "manifest_version": 2,
    "name": "Global Consent Manager",
    "version": "1.2.0",

    "description": "A browser extension for easier managing of GDPR consent cookies across websites",
    "homepage_url": "http://www.globalconsentmanager.com/",

    "applications": {
        "gecko": {
            "id": "we@globalconsentmanager.com"
        }
    },

    "permissions": [
        "<all_urls>",
        "cookies",
        "storage",
        "tabs"
    ],
    "background": {
        "scripts": [
            "src/sites.js",
            "src/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "src/cookie.html"
    },

    "icons": {
        "96": "icon-96.png"
    }
}
